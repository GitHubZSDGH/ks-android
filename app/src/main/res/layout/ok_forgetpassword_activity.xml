<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">
    <include layout="@layout/title"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_marginTop="10dp"
        android:background="#ffffff">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="53dp"
            android:layout_gravity="center_vertical"

            >
            <TextView
                android:id="@+id/forget_newPassWord_tv"
                android:layout_width="112dp"
                android:layout_height="wrap_content"
                android:text="新密码"
                android:textSize="17sp"
                android:layout_centerVertical="true"
                android:layout_marginLeft="12dp"
                android:textStyle="bold"
                android:textColor="#1a1a1a"
                />
            <EditText
                android:id="@+id/new_PassWord"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="请输入您的新密码"
                android:layout_toRightOf="@id/forget_newPassWord_tv"
                android:layout_centerVertical="true"
                android:textColorHint="#666666"
                android:background="@null"/>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="#e5e5e5"
                android:layout_marginRight="10dp"
                android:layout_marginLeft="10dp"
                android:layout_alignParentBottom="true"/>
        </RelativeLayout>
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="53dp"
            android:layout_gravity="center_vertical"
            android:layout_marginTop="10dp"
            >
            <TextView
                android:id="@+id/again_forget_newPassWord_tv"
                android:layout_width="112dp"
                android:layout_height="wrap_content"
                android:text="确认新密码"
                android:textSize="17sp"
                android:layout_centerVertical="true"
                android:layout_marginLeft="12dp"
                android:textStyle="bold"
                android:textColor="#1a1a1a"
                />
            <EditText
                android:id="@+id/Confirm_New_Password"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="请再次输入您的新密码"
                android:layout_toRightOf="@id/again_forget_newPassWord_tv"
                android:layout_centerVertical="true"
                android:textColorHint="#666666"
                android:background="@null"
                />

        </RelativeLayout>
    </LinearLayout>
    <Button
        android:id="@+id/confirm_modification_btn"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="48dp"
        android:layout_marginRight="48dp"
        android:text="确认修改"
        android:textStyle="bold"
        android:textColor="#ffffff"
        android:textSize="17sp"
        android:background="@drawable/button"
        android:layout_marginTop="55dp"/>
</LinearLayout>