<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/ll_all"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:padding="10dp">
<RelativeLayout
    android:layout_width="120dp"
    android:layout_height="120dp"
    android:background="@drawable/home_white">
    <hlks.hualiangou.com.ks_android.view.img.ImageViewSubClass
        android:id="@+id/iv_img"
        android:layout_width="120dp"
        android:layout_height="120dp"
        android:scaleType="fitXY"
        android:src="@drawable/default_errow"/>
    <TextView
        android:id="@+id/jifen_back"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignParentStart="true"
        tools:text="asasd"
        android:textColor="#CEB57D"
        android:gravity="center"
        android:textSize="@dimen/text_size_10"
        android:background="#F9EFD9"
        android:visibility="gone"/>
</RelativeLayout>
    <TextView
        android:id="@+id/tv_title"
        android:layout_width="120dp"
        android:layout_height="wrap_content"
        android:ellipsize="end"
        android:lines="1"
        tools:text="sad撒撒多所多所，"
        android:textSize="@dimen/text_size_10"
        android:lineSpacingExtra="6dp"
        android:gravity="center"
        android:layout_marginTop="10dp"
        android:textColor="@color/black"
        />
    <TextView
        android:id="@+id/tv_money"
        android:layout_width="120dp"
        android:layout_height="wrap_content"
        android:textSize="@dimen/text_size_12"
        android:textColor="@color/corlorsearch"
        android:text="150.00"
        android:gravity="center"
        />
    <TextView
        android:id="@+id/old_money"
        android:layout_width="120dp"
        android:layout_height="wrap_content"
        android:ellipsize="end"
        android:maxLines="1"
        android:text="120"
        android:textColor="@color/corlorsearch"
        android:textSize="@dimen/text_size_12"
        android:gravity="center"
        />

</LinearLayout>