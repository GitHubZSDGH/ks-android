<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:tools="http://schemas.android.com/tools"
    android:background="@color/white"
    android:paddingLeft="10dp"
    android:paddingRight="10dp">

    <RelativeLayout

        android:layout_width="match_parent"
        android:layout_height="150dp"
        android:visibility="visible">

        <CheckBox
            android:id="@+id/item_checkBox"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:background="@drawable/shoppingcheckbox"
            android:button="@null" />

        <ImageView

            android:id="@+id/item_shop_img"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:layout_centerVertical="true"
            android:layout_marginLeft="20dp"
            android:layout_toRightOf="@id/item_checkBox"
            android:src="@drawable/ic_launcher" />

        <TextView
            android:id="@+id/jifen_back"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@+id/item_shop_img"
            android:layout_alignStart="@+id/item_shop_img"
            android:layout_toStartOf="@+id/item_shop_yes"
            android:background="#F9EFD9"
            android:gravity="center"
            android:textColor="#CEB57D"
            android:textSize="@dimen/text_size_10"
            android:visibility="gone"
            tools:text="asasd" />
<LinearLayout
    android:id="@+id/item_shop_yes"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:layout_marginLeft="10dp"
    android:layout_centerVertical="true"
    android:layout_toEndOf="@id/item_shop_img"
    android:visibility="visible">
        <TextView
            android:id="@+id/item_shop_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginTop="10dp"
            android:layout_toRightOf="@id/item_shop_img"
            android:text="日本DHC碟翠诗橄榄蜂蜜滋养洗脸手工皂 90g"
            android:textColor="@color/color_1a1a1a" />

        <TextView
            android:id="@+id/item_shop_name_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:text="洗脸手工皂 90g"
            android:textColor="@color/color_666" />
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/item_money"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@id/item_shop_img"
            android:text="￥123"
            android:textColor="@color/color_e53e42" />
<TextView
    android:layout_width="0dp"
    android:layout_height="wrap_content"
    android:layout_weight="1"/>
        <TextView
            android:id="@+id/item_shop_num"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:gravity="center"
            android:text="X" />

        <TextView
            android:id="@+id/item_count_num"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingLeft="5dp"
            android:paddingRight="5dp"
            android:text="1"
            android:textColor="@color/color_1a1a1a" />
    </LinearLayout>
    </LinearLayout>
    </RelativeLayout>

    <LinearLayout
        android:id="@+id/item_shop_no"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_marginTop="34dp"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true"
        android:layout_marginStart="154dp"
        android:visibility="gone">


        <LinearLayout
            android:id="@+id/linearLayout"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="11dp"
            android:layout_marginStart="21dp"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/item_remove_count"
                android:layout_width="48dp"
                android:layout_height="33dp"
                android:background="@drawable/back_item_kuang"
                android:gravity="center"
                android:text="-"
                android:textSize="20sp" />

            <TextView
                android:id="@+id/item_count"
                android:layout_width="52dp"
                android:layout_height="33dp"
                android:background="@drawable/back_item_kuang"
                android:gravity="center"
                android:text="1"
                android:textSize="20sp" />

            <TextView
                android:id="@+id/item_add_count"
                android:layout_width="48dp"
                android:layout_height="33dp"
                android:background="@drawable/back_item_kuang"
                android:gravity="center"
                android:text="+"
                android:textSize="20sp" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="190dp"
            android:layout_height="wrap_content"
            android:layout_alignStart="@+id/linearLayout"
            android:layout_below="@+id/linearLayout"
            android:background="@drawable/back_item_whiteone"
            android:gravity="center_vertical"
            android:orientation="horizontal">

            <TextView

                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="10dp"
                android:layout_marginLeft="5dp"
                android:layout_marginTop="10dp"
                android:text="规格:"
                android:textColor="@color/color_1a1a1a"
                android:textSize="13sp" />

            <TextView
                android:id="@+id/item_shop_guige"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="90kg"
                android:textColor="@color/color_1a1a1a"
                android:textSize="13sp" />

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1" />

            <ImageView
                android:id="@+id/item_shop_iv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="5dp"
                android:src="@drawable/addaddress_down" />
        </LinearLayout>
    </LinearLayout>
</RelativeLayout>