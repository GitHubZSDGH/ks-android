<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:paddingLeft="10dp"
    android:paddingRight="10dp">
<RelativeLayout
    android:layout_width="match_parent"
    android:layout_height="150dp">
    <CheckBox
        android:id="@+id/item_checkBox"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:background="@drawable/shoppingcheckbox"
        android:button="@null" />

    <ImageView

        android:id="@+id/item_shop_img"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_centerVertical="true"
        android:layout_marginLeft="20dp"
        android:layout_toRightOf="@id/item_checkBox"
        android:src="@drawable/ic_launcher" />

    <TextView
        android:id="@+id/item_shop_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@id/item_shop_img"
        android:layout_centerVertical="true"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="10dp"
        android:layout_toRightOf="@id/item_shop_img"
        android:text="日本DHC碟翠诗橄榄蜂蜜滋养洗脸手工皂 90g"
        android:textColor="@color/color_1a1a1a" />

    <TextView
        android:id="@+id/item_shop_name_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@id/item_shop_name"
        android:layout_below="@id/item_shop_name"
        android:layout_marginTop="5dp"
        android:layout_toRightOf="@id/item_shop_img"
        android:text="洗脸手工皂 90g"
        android:textColor="@color/color_666" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@id/item_shop_name"
        android:layout_marginBottom="10dp"
        android:layout_alignBottom="@id/item_shop_img"
        android:layout_marginTop="10dp"
        android:layout_toRightOf="@id/item_shop_img"
        android:id="@+id/item_money"
        android:text="￥123"
        android:textColor="@color/color_e53e42" />

    <TextView
        android:id="@+id/item_add_count"
        android:layout_width="20dp"
        android:layout_height="20dp"
        android:layout_alignBottom="@id/item_shop_img"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:background="@color/color_f5f5f5"
        android:gravity="center"
        android:text="+" />

    <TextView
        android:id="@+id/item_count"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@id/item_shop_img"
        android:layout_toLeftOf="@id/item_add_count"
        android:paddingLeft="5dp"
        android:paddingRight="5dp"
        android:text="1"
        android:textColor="@color/color_1a1a1a" />

    <TextView
        android:id="@+id/item_remove_count"
        android:layout_width="20dp"
        android:layout_height="20dp"
        android:layout_alignBottom="@id/item_shop_img"
        android:layout_toLeftOf="@id/item_count"
        android:background="@color/color_f5f5f5"
        android:gravity="center"
        android:text="-" />
</RelativeLayout>
</RelativeLayout>