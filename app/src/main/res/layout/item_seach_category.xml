<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <ImageView
        android:id="@+id/item_category_seachimg"
        android:layout_width="180dp"
        android:layout_height="180dp"
        android:scaleType="fitXY"
        android:src="@mipmap/ic_launcher" />

    <TextView
        android:layout_gravity="center"
        android:id="@+id/shop_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="16sp"
        tools:text="阿斯达所大所多" />

    <LinearLayout
        android:layout_marginTop="12dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="bottom"
        android:orientation="horizontal">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="￥"
            android:textColor="@color/color_e53e42"
            android:textSize="12sp" />

        <TextView
            android:id="@+id/item_money_integer"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="16sp"
            android:textColor="@color/color_e53e42"
            tools:text="128." />
        <TextView
            android:id="@+id/item_money_decimal"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="12sp"
            android:textColor="@color/color_e53e42"
            tools:text="00" />
<TextView
    android:layout_gravity="top"
    android:layout_marginLeft="5dp"
    android:id="@+id/item_commodity_state"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:background="@drawable/shape_commodity_state"
    android:textSize="10sp"
    android:textColor="@color/white"
    tools:text="满减"/>
    </LinearLayout>
    <LinearLayout
        android:layout_marginTop="7dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="bottom"
        android:orientation="horizontal">

<TextView
    android:layout_gravity="top"
    android:layout_marginLeft="5dp"
    android:id="@+id/item_commodity_nature"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:background="@drawable/shape_commodity_nature"
    android:textSize="10sp"
    android:textColor="@color/color_e53e42"
    tools:text="满减"
    android:visibility="invisible"/>
        <TextView
            android:id="@+id/item_comment_number"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="#999999"
            tools:text="25456条评论"
            android:layout_marginLeft="8dp"
            android:textSize="12dp"/>
        <TextView
            android:id="@+id/item_craise_rate"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="#999999"
            tools:text="好评率：96%"
            android:layout_marginLeft="8dp"
            android:textSize="12dp"/>

    </LinearLayout>
</LinearLayout>