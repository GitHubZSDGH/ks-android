<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_margin="5dp"
    android:background="@color/white"
    android:orientation="vertical">
<RelativeLayout
    android:layout_width="180dp"
    android:layout_height="180dp">
    <ImageView
        android:id="@+id/item_category_seachimg"
        android:layout_width="180dp"
        android:layout_height="180dp"
        android:scaleType="fitXY"
        android:src="@drawable/zhanweitu" />
    <TextView
        android:id="@+id/jifen_back"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignParentStart="true"
        tools:text="asasd"
        android:textColor="#CEB57D"
        android:gravity="center"
        android:textSize="@dimen/text_size_10"
        android:background="#F9EFD9"
        android:visibility="gone"/>
</RelativeLayout>
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="4dp"
        android:gravity="bottom"
        android:orientation="horizontal">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="￥"
            android:textColor="@color/color_e53e42"
            android:textSize="@dimen/text_size_10"
            android:visibility="gone" />

        <TextView
            android:id="@+id/item_money_integer"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingLeft="6dp"
            android:textColor="@color/color_e53e42"
            android:textSize="@dimen/text_size_12"
            tools:text="128." />

        <TextView
            android:id="@+id/item_money_decimal"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/color_e53e42"
            android:textSize="@dimen/text_size_8"
            tools:text="00" />

        <TextView
            android:id="@+id/item_commodity_state"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="top"
            android:layout_marginLeft="5dp"
            android:background="@drawable/shape_commodity_state"
            android:textColor="@color/white"
            android:textSize="10sp"
            android:visibility="gone"
            tools:text="满减" />
    </LinearLayout>

    <TextView
        android:id="@+id/shop_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginLeft="@dimen/dip_6"
        android:ellipsize="end"
        android:lineSpacingExtra="6dp"
        android:lines="2"
        android:paddingLeft="6dp"
        android:textSize="@dimen/text_size_12"
        tools:text="阿斯达所大所多" />

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="8dp"
        android:layout_marginTop="7dp"
        android:gravity="bottom"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/item_commodity_nature"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="top"
            android:layout_marginLeft="5dp"
            android:background="@drawable/shape_commodity_nature"
            android:padding="1dp"
            android:text="自营"
            android:textColor="@color/color_e53e42"
            android:textSize="10sp"
            android:visibility="visible" />

        <TextView
            android:id="@+id/item_comment_number"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="8dp"
            android:textColor="#999999"
            android:textSize="@dimen/text_size_10"
            tools:text="25456条评论" />

        <TextView
            android:id="@+id/item_craise_rate"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="8dp"
            android:textColor="#999999"
            android:textSize="@dimen/text_size_10"
            tools:text="好评率：96%" />

    </LinearLayout>
</LinearLayout>