<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="hlks.hualiangou.com.ks_android.activity.orderdetails.ReceivingAddressActivity">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:background="@color/color_1b1a1f">

        <ImageView
            android:id="@+id/receiving_address_return"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingLeft="10dp"
            android:src="@drawable/nav_return3"
            android:layout_centerVertical="true"
            android:layout_alignParentStart="true" />

        <TextView

            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingTop="10dp"
            android:paddingBottom="10dp"
            android:textSize="18dp"
            android:textColor="@color/white"
            android:layout_centerHorizontal="true"
            android:layout_centerVertical="true"
            android:text="收货地址" />
    </RelativeLayout>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">
    <ListView
        android:id="@+id/ll_receiving_address"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_above="@+id/new_add_address">

    </ListView>
        <TextView
            android:id="@+id/new_add_address"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:background="@drawable/address_shep"
            android:textColor="@color/white"
            android:textSize="16sp"
            android:gravity="center"
            android:text="新增地址"
            android:layout_alignParentBottom="true"
            />
    </RelativeLayout>
</LinearLayout>
