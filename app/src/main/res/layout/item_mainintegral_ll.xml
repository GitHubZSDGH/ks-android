<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="@dimen/dip_70"
    android:orientation="horizontal"
    >
<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_weight="1"
    android:orientation="vertical"
    android:layout_marginLeft="@dimen/dip_16">
    <TextView
        android:id="@+id/shop_name_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:ellipsize="end"
        android:lines="2"
        android:layout_marginTop="@dimen/dip_6"
        android:layout_marginRight="@dimen/dip_32"
        android:text="购买商品获得"
        android:textSize="@dimen/text_size_12"
        android:textColor="@color/color_1a1a1a"/>

    <TextView
        android:id="@+id/shop_time_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="2101-12-11 12:02:02"
        android:textColor="@color/color_999999"
        android:textSize="@dimen/text_size_10"
        android:layout_marginTop="@dimen/dip_8"/>
</LinearLayout>
    <TextView
        android:id="@+id/main_integral_num"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="20dp"
        android:text="+123"
        android:layout_gravity="center_vertical"
        android:textColor="@color/color_bea571"
        android:textSize="@dimen/dip_16" />
</LinearLayout>
</LinearLayout>