<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
<RelativeLayout
    android:layout_width="match_parent"
    android:layout_height="@dimen/dip_50">

    <TextView
        android:id="@+id/shop_name_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_marginTop="@dimen/dip_6"
        android:layout_alignStart="@+id/shop_time_tv"
        android:text="购买商品获得"
        android:textSize="@dimen/text_size_12"
        android:textColor="@color/color_1a1a1a"/>

    <TextView
        android:id="@+id/shop_time_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignParentStart="true"
        android:layout_marginStart="25dp"
        android:text="2101-12-11 12:02:02"
        android:textColor="@color/color_999999"
        android:textSize="@dimen/text_size_10"
        android:layout_marginBottom="@dimen/dip_6"/>

    <TextView
        android:id="@+id/main_integral_num"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_centerVertical="true"
        android:layout_marginEnd="20dp"
        android:text="+123"
        android:textColor="@color/color_bea571"
        android:textSize="@dimen/dip_16" />
</RelativeLayout>
</LinearLayout>