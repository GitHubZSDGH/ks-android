<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <CheckBox
        android:id="@+id/foot_checkBox"
        android:layout_width="50dp"
        android:layout_height="100dp" />

    <ImageView
        android:id="@+id/foot_img"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_toRightOf="@id/foot_checkBox" />

    <TextView
        android:id="@+id/foot_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@id/foot_img"
        android:text="dsadsadsadsa" />

    <TextView
        android:id="@+id/foot_money"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/foot_title"
        android:layout_toRightOf="@id/foot_img"
        android:text="dsadsadsadsa" />
</RelativeLayout>