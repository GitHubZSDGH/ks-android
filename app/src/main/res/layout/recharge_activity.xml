<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">
    <include layout="@layout/my_top_bean"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:background="#f5f5f5">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="70dp"
            android:background="#ffffff">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="我的联豆"
                android:textSize="16sp"
                android:textColor="#000000"
                android:layout_marginLeft="19dp"
                android:layout_centerVertical="true"/>

            <ImageView
                android:id="@+id/big_bean2"
                android:layout_width="23dp"
                android:layout_height="19dp"
                android:layout_marginRight="21dp"
                android:layout_centerVertical="true"
                android:layout_alignParentRight="true"
                android:src="@drawable/bigbean2"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_toLeftOf="@id/big_bean2"
                android:layout_centerVertical="true"
                android:layout_marginRight="8dp"
                android:text="25461"
                android:textSize="24sp"
                android:textColor="#000000"/>
        </RelativeLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="125dp"
            android:background="#ffffff"
            android:layout_marginTop="10dp"
            android:orientation="vertical">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="20dp"
                android:layout_marginTop="14dp"
                android:textSize="16sp"
                android:textColor="#333333"
                android:text="充值数量"/>
            <EditText
                android:id="@+id/Recharge_bean_number_et"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:layout_marginTop="9dp"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="20dp"
                android:maxLength="5"
                android:background="@drawable/edittext"
                android:hint="温馨提示：1联豆=1RMB"
                android:textSize="14sp"
                android:textColor="#000000"
                android:textColorHint="#cccccc"
                android:phoneNumber="true"
                android:paddingLeft="20dp"
                android:digits="0123456789"
                />
            <LinearLayout
                android:id="@+id/Ok_Bean_Number"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginTop="8dp"
                android:layout_marginLeft="20dp"
                android:visibility="gone">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="需要支付"
                    android:textSize="12sp"
                    android:textColor="#999999"/>
                <TextView
                    android:id="@+id/bean_number_tv"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="零"
                    android:textSize="12sp"
                    android:textColor="#999999"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="RMB"
                    android:textSize="12sp"
                    android:textColor="#999999"/>
            </LinearLayout>
        </LinearLayout>
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:background="#ffffff"
            android:layout_marginTop="10dp">

            <ImageView
                android:id="@+id/bank_card_payment"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/bankcardpayment3"
                android:layout_centerVertical="true"
                android:layout_marginLeft="23dp"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="#000000"
                android:textSize="14sp"
                android:text="银行卡支付（默认）"
                android:layout_toRightOf="@id/bank_card_payment"
                android:layout_centerVertical="true"
                android:layout_marginLeft="9.5dp"/>
            <CheckBox
                android:id="@+id/pay_back_ck"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:layout_marginRight="21dp"
                android:background="@drawable/withdraw_check"
                android:button="@null"
                android:checked="true"
                />
        </RelativeLayout>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_marginLeft="23dp"/>
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:background="#ffffff"
            >

            <ImageView
                android:id="@+id/WeChat_Pay"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/wechat_pay"
                android:layout_centerVertical="true"
                android:layout_marginLeft="23dp"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="#000000"
                android:textSize="14sp"
                android:text="微信支付"
                android:layout_toRightOf="@id/WeChat_Pay"
                android:layout_centerVertical="true"
                android:layout_marginLeft="9.5dp"/>
            <CheckBox
                android:id="@+id/pay_Wechat_ck"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:layout_marginRight="21dp"
                android:background="@drawable/withdraw_check"
                android:button="@null"
                />
        </RelativeLayout>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_marginLeft="23dp"/>
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:background="#ffffff"
            >
            <ImageView
                android:id="@+id/pay_by_Alipay"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/pay_by_alipay3"
                android:layout_centerVertical="true"
                android:layout_marginLeft="23dp"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="#000000"
                android:textSize="14sp"
                android:text="支付宝支付"
                android:layout_toRightOf="@id/pay_by_Alipay"
                android:layout_centerVertical="true"
                android:layout_marginLeft="9.5dp"/>
            <CheckBox
                android:id="@+id/pay_Alipay_ck"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:layout_marginRight="21dp"
                android:background="@drawable/withdraw_check"
                android:button="@null"
                />
        </RelativeLayout>
        <Button
            android:id="@+id/ok_recharge_btn"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:layout_marginTop="20dp"
            android:layout_marginLeft="23dp"
            android:layout_marginRight="23dp"
            android:background="#FFDF3031"
            android:text="确认充值"
            android:textColor="#ffffff"
            android:textSize="16sp"/>
    </LinearLayout>
</LinearLayout>