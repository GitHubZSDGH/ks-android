<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:tools="http://schemas.android.com/tools"
    android:background="@color/white"
    android:paddingLeft="10dp"
    android:paddingRight="10dp">
    <ImageView

        android:id="@+id/item_shop_img"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_centerVertical="true"
        android:layout_marginLeft="20dp"
        android:src="@drawable/ic_launcher" />
    <TextView
        android:id="@+id/item_shop_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@id/item_shop_img"
        android:layout_centerVertical="true"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="10dp"
        android:layout_toRightOf="@id/item_shop_img"
        android:textSize="@dimen/text_size_10"
        android:text="日本DHC碟翠诗橄榄蜂蜜滋养洗脸手工皂 90g"
        android:textColor="@color/color_1a1a1a" />
    <TextView
        android:id="@+id/item_shop_name_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@id/item_shop_name"
        android:layout_below="@id/item_shop_name"
        android:layout_marginTop="5dp"
        android:layout_toRightOf="@id/item_shop_img"
        android:textSize="@dimen/text_size_10"
        android:text="洗脸手工皂 90g"
        android:textColor="@color/color_666" />

    <TextView

        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@id/item_shop_name"
        android:layout_marginBottom="10dp"
        android:layout_alignBottom="@id/item_shop_img"
        android:layout_marginTop="10dp"
        android:layout_toRightOf="@id/item_shop_img"
        android:id="@+id/item_money"
        android:textSize="@dimen/text_size_10"
        android:text="￥123"
        android:textColor="@color/color_e53e42" />
    <TextView

        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/item_order_shop_num"
        android:text="X1"
        android:textColor="@color/color_e53e42"
        android:layout_marginEnd="20dp"
        android:layout_alignBaseline="@+id/item_money"
        android:layout_alignBottom="@+id/item_money"
        android:layout_alignParentEnd="true" />

    <TextView
        android:id="@+id/jifen_back"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/item_shop_img"
        android:layout_alignEnd="@+id/item_shop_img"
        android:layout_alignStart="@+id/item_shop_img"
        android:background="#F9EFD9"
        android:gravity="center"
        android:textColor="#CEB57D"
        android:textSize="@dimen/text_size_10"
        android:visibility="gone"
        tools:text="asasd" />
</RelativeLayout>