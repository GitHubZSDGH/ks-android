<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/ll_all"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:padding="@dimen/dip_10"
    android:gravity="center_horizontal">
<RelativeLayout
    android:layout_width="170dp"
    android:layout_height="170dp"
    android:background="@drawable/home_white">
    <hlks.hualiangou.com.ks_android.view.img.ImageViewSubClass
        android:id="@+id/iv_img"
        android:layout_width="170dp"
        android:layout_height="170dp"
        android:scaleType="fitXY"
        android:src="@drawable/default_errow"/>
    <TextView
        android:id="@+id/jifen_back"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignParentStart="true"
        tools:text="asasd"
        android:textColor="#CEB57D"
        android:gravity="center"
        android:textSize="@dimen/text_size_10"
        android:background="#F9EFD9"
        android:visibility="gone"/>
</RelativeLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignBottom="@+id/iv_img"
        android:gravity="center"
        android:orientation="vertical">

        <TextView
            android:id="@+id/tv_title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:ellipsize="end"
            android:gravity="center"
            android:lines="1"
            android:text="都告诉你这很危险了，出了事情，别怪我没告诉你啊"
            android:textColor="@color/black"
            android:textSize="@dimen/text_size_12" />

        <TextView
            android:id="@+id/tv_money"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:text="150.00"

            android:textColor="@color/corlorsearch"
            android:textSize="@dimen/text_size_12"
            android:visibility="gone"/>

        <TextView
            android:id="@+id/old_money"
            android:layout_width="120dp"
            android:layout_height="wrap_content"
            android:ellipsize="end"
            android:gravity="center"
            android:maxLines="1"
            android:text="120"
            android:textColor="@color/corlorsearch"
            android:textSize="@dimen/text_size_12"
            android:visibility="visible" />
    </LinearLayout>


</LinearLayout>