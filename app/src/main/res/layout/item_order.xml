<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:tools="http://schemas.android.com/tools"
    android:background="@color/white"
    android:paddingLeft="10dp"
    android:paddingRight="10dp">

    <RelativeLayout

        android:layout_width="match_parent"
        android:layout_height="150dp"
        android:visibility="visible">

        <!--<CheckBox-->
            <!--android:id="@+id/item_checkBox"-->
            <!--android:layout_width="wrap_content"-->
            <!--android:layout_height="wrap_content"-->
            <!--android:layout_centerVertical="true"-->
            <!--android:background="@drawable/shoppingcheckbox"-->
            <!--android:button="@null" />-->

        <ImageView

            android:id="@+id/item_shop_img"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:layout_centerVertical="true"
            android:layout_marginLeft="20dp"
            android:src="@drawable/ic_launcher" />

        <TextView
            android:id="@+id/jifen_back"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@+id/item_shop_img"
            android:layout_alignStart="@+id/item_shop_img"
            android:layout_toStartOf="@+id/item_shop_yes"
            android:background="#F9EFD9"
            android:gravity="center"
            android:textColor="#CEB57D"
            android:textSize="@dimen/text_size_10"
            android:visibility="gone"
            tools:text="asasd" />
<LinearLayout
    android:id="@+id/item_shop_yes"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:layout_marginLeft="10dp"
    android:layout_centerVertical="true"
    android:layout_toEndOf="@id/item_shop_img"
    android:visibility="visible">
        <TextView
            android:id="@+id/item_shop_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginTop="10dp"
            android:layout_toRightOf="@id/item_shop_img"
            android:text="日本DHC碟翠诗橄榄蜂蜜滋养洗脸手工皂 90g"
            android:textColor="@color/color_1a1a1a" />

        <TextView
            android:id="@+id/item_shop_name_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:text="洗脸手工皂 90g"
            android:textColor="@color/color_666" />
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/item_money"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@id/item_shop_img"
            android:text="￥123"
            android:textColor="@color/color_e53e42" />
<TextView
    android:layout_width="0dp"
    android:layout_height="wrap_content"
    android:layout_weight="1"/>
        <TextView
            android:id="@+id/item_shop_num"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:gravity="center"
            android:text="X" />

        <TextView
            android:id="@+id/item_count_num"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingLeft="5dp"
            android:paddingRight="5dp"
            android:text="1"
            android:textColor="@color/color_1a1a1a" />
    </LinearLayout>
    </LinearLayout>
    </RelativeLayout>


</RelativeLayout>