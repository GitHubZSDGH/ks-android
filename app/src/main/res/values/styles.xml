    <!--normal白色文本-->
    <style name="whiteTextStyle">
        <item name="android:textSize">@dimen/font_normal</item>
        <item name="android:textColor">@color/white</item>
    </style>
    <style name="blackTextStyle">
        <item name="android:textSize">@dimen/font_normal</item>
        <item name="android:textColor">@color/black</item>
    </style>
    <style name="blackTextStyleSmall">
        <item name="android:textSize">@dimen/font_small</item>
        <item name="android:textColor">@color/black</item>
    </style>
    <style name="greyTextStyleSmaller">
        <item name="android:textSize">14sp</item>
        <item name="android:textColor">@color/grey_text_color_normal</item>
    </style>
    <style name="colorPrimaryTextStyleSmall">
        <item name="android:textSize">@dimen/font_small</item>
        <item name="android:textColor">@color/colorPrimary</item>
    </style>
    <style name="colorPrimaryTextStyle">
        <item name="android:textSize">@dimen/font_normal</item>
        <item name="android:textColor">@color/white</item>
    </style>
    <style name="greyTextStyleSmall">
        <item name="android:textSize">@dimen/font_small</item>
        <item name="android:textColor">@color/grey_text_color_normal</item>
    </style>

    <!--倒计时-->
    <style name="RushBuyCountDownTimerViewStyle" parent="SnapUpView">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:gravity">center</item>
        <item name="android:text">0</item>
        <item name="android:textColor">@color/color_ffffff</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="RushBuyCountDownTimerViewStyleRed" parent="RushBuyCountDownTimerViewStyle">
        <item name="android:textColor">@android:color/white</item>
    </style>


    <style name="SnapUpViewColonhh" parent="SnapUpView">
        <item name="android:textColor">#4F4242</item>
        <item name="android:background">@android:color/white</item>
        <item name="android:gravity">center_vertical</item>
        <item name="android:text">时</item>
        <item name="android:layout_margin">3dp</item>
        <item name="android:textStyle">bold</item>
    </style>
    <style name="SnapUpViewColonmm" parent="SnapUpView">
        <item name="android:textColor">#4F4242</item>
        <item name="android:background">@android:color/white</item>
        <item name="android:gravity">center_vertical</item>
        <item name="android:text">分</item>
        <item name="android:layout_margin">3dp</item>
        <item name="android:textStyle">bold</item>
    </style>


    <style name="SnapUpView">
        <!--//改变控件大小-->
        <item name="android:textSize">20sp</item>
    </style>
    !-- TabLayout样式 -->
    <style name="TabLayoutStyle" parent="Widget.Design.TabLayout">
        <!--<item name="tabBackground">@drawable/bg_list_item_selector</item>-->
        <item name="tabIndicatorColor">@color/color_bea571</item>
        <item name="tabSelectedTextColor">@color/color_bea571</item>
        <item name="tabTextAppearance">@style/TabTextAppearence</item>
        <item name="tabGravity">fill</item>
        <item name="tabMode">fixed</item>
        <item name="tabPaddingEnd">0dp</item>
    </style>
    <style name="TabTextAppearence" parent="TextAppearance.Design.Tab">
        <!--<item name="android:textColor">@color/tab_text_color_selector</item>-->
        <item name="android:textSize">16sp</item>
        <item name="textAllCaps">false</item>
    </style>
</resources>
